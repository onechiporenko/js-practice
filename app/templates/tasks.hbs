{{#if chapterModel.name}}
  <h3>{{#link-to 'tasks' (query-params chapter='')}}Все задачи{{/link-to}} / {{chapterModel.name}} ({{filteredTasks.length}})</h3>
{{else}}
  <h3>Все задачи ({{filteredTasks.length}})</h3>
{{/if}}

{{#each filteredTasks as |task index|}}
  <div class="alert alert-warning">
    {{partial 'partials/task'}}
    <p></p>
    {{partial 'partials/solution'}}
  </div>
{{/each}}

